.page{background-color: #e5e9f2}
.publish-container{
  /*padding: 40rpx;*/
  box-sizing: border-box
}

#publish-content{
  border: 2rpx solid #d2d2d2;
  box-sizing: border-box;
  width:670rpx;
  padding: 10rpx;
  font-size: 32rpx;
  border-radius: 6rpx;
  /* color: #999 */
}
.publish{
  font-size:30rpx;
  box-sizing: border-box;
  padding:40rpx;
  background-color: #fff
}
.publish .publish-row.content{
  flex-direction: column;
  align-items: flex-end;
}
.publish .content-tips{
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #e64340;
  margin-right: 10rpx;
}
.publish.top,.publish.middle{
  margin-bottom: 10rpx;
}
.publish .publish-row{
  display: flex;
  align-items: center;
}
.publish .publish-row .select-icon{
  border-radius: 100%;
  width:48rpx;
  height: 48rpx;
  color: #fff;
  text-align: center;
  line-height: 48rpx;
  margin-right: 20rpx;
  font-size: 24rpx
}
.publish .publish-row .select-icon.del{
  background-color: #e64340;
}
.publish .publish-row .select-icon.del.disable{
  background-color: #666
}
.publish .publish-row input{
  border-bottom: 2rpx solid #d2d2d2;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  height: 90rpx;
  flex: 1
}
.publish .publish-row .select-icon.add{
  background-color: #1AAD19;
  margin-bottom: 40rpx
}
.publish .publish-row .add-txt{
  /* color: #5f1971; */
  margin-bottom: 40rpx
}
.publish .preview-imgs{
  display: flex;
  /*justify-content: space-between;*/
  
}
.publish .preview-imgs image{
  background: #ddd;
  width: 216rpx;
  height:216rpx;
  border-radius:6rpx;
  margin-right: 21rpx; 
}
.publish .preview-imgs image:last-child{
  margin-right: 0;
}
.publish.bottom .publish-row {
  background-color: #1AAD19;
  justify-content: space-between;
  /*margin-bottom: 40rpx;*/
  border-bottom: 2rpx solid #d2d2d2;
  padding: 30rpx 0;
}
.publish.bottom .radio-group .radio{
  height: 70rpx;
  line-height: 70rpx;
  display: inline-block;
}
.publish.bottom .radio-group .radio radio{
  margin:0 10rpx;
  
}
.publish.bottom .picker-row{
  display: flex
}
.publish.bottom .picker{
  margin-right: 20rpx
}
.submit-btn{
  color: #1AAD19;
}