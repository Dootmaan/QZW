

<view class="page-wrap"> 
  <scroll-view class="container" scroll-y="true">
     <view class="post-list"> 
        <view class="post-card" wx:for="{{publishs}}" wx:for-item="publish" wx:for-index="idx">
         <view class="card-header flex flex-row">
              <image class="avatar flex-auto" src="{{userAvatarUrl}}" mode="aspectFit"></image>
               <view class="post-name flex-stretch">{{userNickName}}</view>   
            <!-- <view class="post-time">{{publish.createdAt}}</view>  -->
          </view>
          <view class="card-body">
            <view class="content">{{publish.content}}</view>
            <view class="post-images">
              <image class="post-image"
                wx:for="{{imgs[idx]}}"
                wx:for-item="image"
                wx:key="{{index}}"
                mode="aspectFill"
                bindtap='previewImage'
                data-src='{{image}}'
                src="{{image}}" 
                data-urls="{{imgs[idx]}}"/>
            </view>
            <view class='date' >
              {{pubTime}}
            </view>
          </view>
        </view>
        
     </view> 
 </scroll-view>
</view>
<!--写评论  -->
<view class="flex-wrap header">
  <textarea
    placeholder="说点什么.." 
    bindinput="updateDraft" 
    value="{{draft}}" 
    class="new-comment"
  ></textarea>
  <!-- <input
    placeholder="说点什么.." 
    bindinput="updateDraft" 
    value="{{draft}}" 
    class="new-comment"/> -->
  <text style="display: {{draft ? 'inline': 'none'}}" class="add tappable" ontap="addComment">评论</text>
</view>
