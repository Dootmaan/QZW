<view class="comment-list">
  <view class="comment-wrapper" wx:for="{{comments}}" wx:for-index="idx" wx:for-item="comment" >
    <image class="avator" src="{{users[idx].avatarUrl}}"></image>
    <view class="comment-info">
      <view class="user">{{users[idx].nickName}}</view>

      <view class="content">
        <view class="text-content" >{{comment.content}}</view>
      </view>
      <!-- <view class="date">{{comment.createdAt}}</view> -->
      <view class='date'>{{pubsTime[idx]}}</view>

    </view>
  </view>
