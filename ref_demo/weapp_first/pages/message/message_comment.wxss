/* pages/message/message_comment.wxss */

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname { 
  color: #aaa;
}

.post-list{
  padding: 0;
  border: none;
  box-shadow: none;
  margin: 0;
}
.post-card{
  border-bottom: 5px #F2F1F6 solid;
  background-color: #fff;
  color: #444;
  position: relative;
  display: block;
  font-size: 26px;
}

.card-header{
  height: 48px;
  display: -webkit-flex;
  /*这没有设置display尼玛好坑  */
}
.card-header .avatar{
  max-width: 72rpx;
  max-height: 72rpx;
  border-radius: 72rpx;
  margin: 4px 12px;
}
.card-header .post-name{
  color: #444;
  font-size: 32rpx;
  font-weight: normal;
  text-align: left;
  line-height: 48px;
  flex: 3;
}
.card-header .post-action{
  width:16px;
  height:16px;
  color:#999;
  margin:16px 12px 16px 0;
}
.card-header .post-time{
  color: #888;
  font-size: 28rpx;
  font-weight: normal;
  text-align: right;
  line-height: 48px;
  padding: 0px 6px;
  max-width: 150px;
}
.card-body{
  padding: 0px 12px 4px 12px;
  margin-bottom: 6px;
}
.card-body .content{
  font-size: 32rpx;
  line-height: 42rpx;
  padding: 4px 0;
}
.card-body .post-images{
  padding-right:0px;
  margin-top: 5px;
}
.card-body .post-image{
  width: 210rpx;
  height: 210rpx;
  padding-right: 0rpx;
}
.card-buttons{
  padding: 0px;
}
.card-buttons .icon {
  width: 21px;
  height: 21px;
  position: absolute;
  top:6px;
  left:112rpx;
}
.card-buttons button{
  font-size: 28rpx;
  background: white;
  border-radius: 0px;
  border: 0px;
  color: #666;
}
.card-buttons button::after{
  border-radius: 0px;
  border: 1px #f3f3f3 solid;
}
.card-buttons button.comment::after{
  border-right: 0px;
}

.comment-list{
  padding: 0;
  border: none;
  box-shadow: none;
  margin: 0;
  background-color: #fff;
}
.comment-list .item{
  border-bottom: 1px #F2F1F6 solid;
  padding: 5px 0px;
}
.comment-list .avatar{
  max-width: 72rpx;
  max-height: 72rpx;
  border-radius: 72rpx;
  margin: 4px 12px;
}
.comment-list .content{
  flex: 8;
}
.comment-list .content .header{
  height: 32px;
}
.comment-list .content .comment{
  font-size: 30rpx;
  line-height: 36rpx;
  color: #666;
}

.comment-list .content .header .comment-name{
  flex: 3;
  color: #444;
  font-size: 32rpx;
  font-weight: normal;
  text-align: left;
  line-height: 32px;
}
.comment-list .content .header .comment-time{
  color: #888;
  font-size: 28rpx;
  font-weight: normal;
  text-align: right;
  line-height: 32px;
  padding: 0px 12px;
  max-width: 100px;
}


.post-btn{
  position: fixed;
  bottom: 100rpx;
  right: 60rpx;
  z-index: 666;
  width: 110rpx;
  height: 110rpx;
  opacity: 0.8;
  background-color: #1AAD19;
  border-radius: 110rpx;
  box-shadow: 0 6rpx 6rpx rgba(0, 0, 0, .5)
}
.post-btn .icon{
  width: 90rpx;
  height: 90rpx;
  margin: 8rpx 0 0 2px;
}

/*todos' wxss  */

.header {
  height: 54px;
  align-items: center;
  background-color: #FFF;
}

.new-comment {
  flex: 1;
  font-size: 18px;
  box-sizing: border-box;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  padding-left: 12px;
  line-height: 100%;
  height: 100%;
}

.add {
  color: #FFF;
  background-color: #1aad19;
  font-size: 16px;
  line-height: 53px;
  padding: 0 16px;
}

.comment-text {
  white-space: nowrap;
  display: block;
  width: 100%;
  height: 50px;
  line-height: 17px;
}


.todo-list {
  padding: 4px 6px 48px;
}
.done {
  text-decoration: line-through;
  color: #ccc;
}
.todo {
  font-size: 18px;
  height: 30px;
  padding: 10px 12px;
  overflow: hidden;
  align-items: center;
  background-color: #fff;
  margin: 1px 0;
  border-radius: 3px;
}
.todo-icon {
  margin-right: 12px;
}
.todo-text {
  white-space: nowrap;
  display: block;
  width: 100%;
  height: 50px;
  line-height: 17px;
}
.todo-input {
  font-size: 18px;
  width: 100%;
}

.footer {
  position: fixed;
  bottom: 0;
  height: 44px;
  width: 100%;
  line-height: 44px;
  color: #666;
  border-top: 1px solid #eee;
  background: #fff;
  font-size: 16px;
  text-align: center;
}
.remove-done,
.setting {
  color: #1aad19;
  padding: 0 12px;
  position: absolute;
}
.remove-done {
  right: 0;
}
.setting {
  left: 0;
}

/* pages/comment-list/comment-list.wxss */
audio-player {
  width: 500rpx !important;
}

.comment-list {
  margin-bottom: 100rpx;
}
.comment-wrapper {
  position: relative;
  display: flex;
  border-bottom: 1px solid #d0d3d3;
  background: white;
}

.comment-wrapper .avator {
  width: 100rpx;
  min-width: 100rpx;
  height: 100rpx;
  margin-top: 32rpx;
  margin-left: 32rpx;
  border-radius: 50%;
}

.comment-wrapper .comment-info {
  flex: 1 1 auto; 
  padding: 32rpx;

}

rating .star-wrapper {
  /* display: inline-block; */
  height: 25rpx;
}

.content {
  padding: 32rpx 0;
  font-size: 30rpx;
  line-height: 42rpx;
}

.date {
  font-size: 25rpx;
  line-height: 30rpx;
  color: #d0d3d3;
}

.actions {
  position: absolute;
  display: flex;
  justify-content: space-between;
  align-items: center;
  top: 0;
  right: 16rpx;
  width: 240rpx;
}

.login-tips {
  font-size: 20rpx;
  line-height: 28rpx;
  padding: 20rpx;
  color: grey;
}

.action-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
}

.like-icon {
  width: 50px;
  height: 50px;
  overflow: hidden;

}

.like {
  height: 50px;
  width: 1450px;
}

.like.active { 
  transform: translateX(-96.5517%);
  transition: transform 1s steps(28); 
}

.like-text {
  margin-left: -30rpx;
  font-size: 25rpx;
  line-height: 35rpx;
  color: #d0d3d3;
}

.like-text.active {
  color: red;
}


.fave-icon {
  width: 35px;
  height: 30px;
  overflow: hidden;
}

.fave {
  height: 30px;
  width: 2389px;
}

.fave.active { 
  transform: translateX(-98.186%);
  transition: transform 1s steps(55); 
}
.fave-text {
  font-size: 20rpx;
  line-height: 28rpx;
  color: #d0d3d3;
}
.fave-text.active {
  color: #ff9c16;
}

.text-content {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow:ellipsis;
  /* 以上4行实现超过2行的文字以...代替  */
  font-weight: 300;
  font-size: 25rpx;
  line-height: 45rpx;
  margin-right: 16rpx;
  height: 90rpx; /* 强制高度为行高的2倍, 保证能完整显示2行文字 */
  overflow: hidden;
  word-break: break-all;
}
